{
  "name": "einvoicing",
  "version": "0.0.2",
  "description": "A JavaScript library for creating and parsing electronic invoices compliant with the eInvoicing Directive, EN 16931, and popular extensions",
  "main": "build/index.js",
  "repository": "https://github.com/esvit/einvoicing",
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "einvoicing",
    "peppol",
    "invoicing",
    "ubl",
    "invoice",
    "europe",
    "european-union"
  ],
  "author": "Vitalii Savchuk <esvit666@gmail.com>",
  "license": "MIT",
  "files": [
    "build/"
  ],
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsutils": "~3.21",
    "typedoc": "^0.27.3",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.3.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm test && npm version patch",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint",
    "test": "jest",
    "docs": "typedoc --out ./docs",
    "prettier": "prettier --config .prettierrc --write .",
    "prettier:check": "prettier --config .prettierrc --check .",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "esvit-node-schematron": "^2.0.3",
    "fast-xml-parser": "^4.5.0",
    "hashids": "^2.3.0",
    "shallow-equal-object": "^1.1.1",
    "tslib": "^2.8.1",
    "uuid-by-string": "^4.0.0"
  }
}
